{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Simple Changes",
  "patterns": [
    {
      "include": "#versions"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#specials"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.changes",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "versions": {
      "patterns": [
        {
          "name": "entity.name.tag.changes",
          "begin": "\\[",
          "end": "\\]\n"
        }
      ]
    },
    "specials": {
      "patterns": [
        {
          "name": "keyword.other.changes",
          "match": "(-\\s)"
        }
      ]
    }
  },
  "scopeName": "source.changes"
}
